// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int      @id @default(0)
  email       String   @unique
  name        String?  @unique
  password    String
  point       Int      @default(0)
}

model Item {
  id          Int      @id @default(0)
  name        String?  @unique
  description String?
  price       Int      @default(0)
}